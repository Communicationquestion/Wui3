<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="xaml.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
   


    <Grid>
   
        <TextBox x:Name="t1" TextWrapping="Wrap" Margin="10" Grid.Row="7">

            <TextBox.ContextFlyout>
                <MenuFlyout>
                    <ToggleMenuFlyoutItem x:Name="fontsize" Text="Bold"  Click="Bold_Click"/>
                    <ToggleMenuFlyoutItem x:Name="fontstyle" Text="Italic"  Click="Italic_Click" />
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="Increase Font Size" Click="Increase_Font_Size_Click" />
                    <MenuFlyoutItem Text="Decrease Font Size" Click="Decrease_Font_ize_Click" />
                </MenuFlyout>
            </TextBox.ContextFlyout>
        </TextBox>
    </Grid>
  
</Window>
